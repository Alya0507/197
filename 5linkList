#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* prev;
    Node* next;
};

int main() {
    // Buat 3 node
    Node* n1 = new Node{1, nullptr, nullptr};
    Node* n2 = new Node{2, nullptr, nullptr};
    Node* n3 = new Node{3, nullptr, nullptr};

    // Hubungkan node satu sama lain
    n1->next = n2;
    n2->prev = n1;
    n2->next = n3;
    n3->prev = n2;

    // Traversal maju (dari depan ke belakang)
    cout << "Traversal maju: ";
    Node* bantu = n1;
    while (bantu != nullptr) {
        cout << bantu->data << " ";
        bantu = bantu->next;
    }

    cout << endl;

    // Traversal mundur (dari belakang ke depan)
    cout << "Traversal mundur: ";
    bantu = n3;
    while (bantu != nullptr) {
        cout << bantu->data << " ";
        bantu = bantu->prev;
    }

    cout << endl;

    // Hapus node untuk menghindari memory leak
    delete n1;
    delete n2;
    delete n3;

    return 0;
}

#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* prev;
    Node* next;
};

int main() {
    // Buat node A, B, C
    Node* A = new Node{1, nullptr, nullptr};
    Node* B = new Node{2, nullptr, nullptr};
    Node* C = new Node{3, nullptr, nullptr};

    // Hubungkan dua arah
    A->next = B;
    B->prev = A;
    B->next = C;
    C->prev = B;

    // Traversal maju
    cout << "Traversal maju: ";
    Node* bantu = A;
    while (bantu != nullptr) {
        cout << bantu->data << " ";
        bantu = bantu->next;
    }
    cout << endl;

    // Traversal mundur
    cout << "Traversal mundur: ";
    bantu = C;
    while (bantu != nullptr) {
        cout << bantu->data << " ";
        bantu = bantu->prev;
    }
    cout << endl;

    delete A;
    delete B;
    delete C;
    return 0;
}


CIRCULAR
#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* prev;
    Node* next;
};

int main() {
    // Buat 3 node
    Node* n1 = new Node{1, nullptr, nullptr};
    Node* n2 = new Node{2, nullptr, nullptr};
    Node* n3 = new Node{3, nullptr, nullptr};

    // Hubungkan node menjadi circular double linked list
    n1->next = n2;
    n2->prev = n1;

    n2->next = n3;
    n3->prev = n2;

    n3->next = n1; // circular: terakhir kembali ke pertama
    n1->prev = n3; // circular: pertama kembali ke terakhir

    // Traversal maju
    cout << "Traversal maju (circular): ";
    Node* bantu = n1;
    do {
        cout << bantu->data << " ";
        bantu = bantu->next;
    } while (bantu != n1);
    cout << endl;

    // Traversal mundur
    cout << "Traversal mundur (circular): ";
    bantu = n1->prev; // mulai dari belakang
    do {
        cout << bantu->data << " ";
        bantu = bantu->prev;
    } while (bantu != n1->prev);
    cout << endl;

    // Putuskan hubungan agar bisa dihapus (hindari loop)
    n1->next = nullptr; n1->prev = nullptr;
    n2->next = nullptr; n2->prev = nullptr;
    n3->next = nullptr; n3->prev = nullptr;

    delete n1;
    delete n2;
    delete n3;

    return 0;
}

#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* berikut;
};

int main() {
    // Buat node A, B, C
    Node* A = new Node{1, nullptr};
    Node* B = new Node{2, nullptr};
    Node* C = new Node{3, nullptr};

    // Hubungkan node (satu arah)
    A->berikut = B;
    B->berikut = C;
    C->berikut = A; // circular: node terakhir menunjuk ke node pertama

    cout << "Traversal Circular Singly Linked List: ";
    Node* bantu = A;
    do {
        cout << bantu->data << " ";
        bantu = bantu->berikut;
    } while (bantu != A); // berhenti saat kembali ke awal
    cout << endl;

    // Putuskan circular agar bisa hapus
    C->berikut = nullptr;
    delete A;
    delete B;
    delete C;

    return 0;
}

